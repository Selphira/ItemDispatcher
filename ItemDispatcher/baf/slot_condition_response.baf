  RESPONSE #%response_weight%
    SetGlobal("ID#%slot%","LOCALS",2)
    SetGlobal("IDR#%index_responses%","LOCALS",1)
    SetGlobal("IDD#%index_dispatchs%","LOCALS",1)
    ApplySpellRES("IDDES%slot_id%",Myself)
    GiveItemCreate("%item%",Myself,%item_per_target%,%charge%,0)
    ActionOverride(Myself,SetItemFlags("%item%",%flags%,TRUE))
    XEquipItem("%item%",MySelf,%slot_name%,EQUIP)
    DisplayString(Myself,'Objet aleatoire condition du slot %slot% : %item%')
    Continue()
